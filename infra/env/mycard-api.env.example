# =====================================================
# MyCard API Environment Configuration
# Location: /etc/mycard/mycard-api.env
#
# ⚠️ SECURITY WARNING
# - Never commit actual credentials to version control
# - Set restrictive permissions: chmod 600 /etc/mycard/mycard-api.env
# - This file should only be readable by root and mycard user
# =====================================================

# --------------------- Spring Profile ---------------------
SPRING_PROFILES_ACTIVE=prod

# --------------------- Server Settings ---------------------
SERVER_PORT=8080

# --------------------- Database (MySQL) ---------------------
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/mycard?useSSL=true&serverTimezone=Asia/Seoul&characterEncoding=utf8mb4
SPRING_DATASOURCE_USERNAME=mycard_app
SPRING_DATASOURCE_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# --------------------- JWT Settings ---------------------
# Generate secure secret: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_64
JWT_ACCESS_TOKEN_VALIDITY=900000
JWT_REFRESH_TOKEN_VALIDITY=604800000

# --------------------- File Upload ---------------------
UPLOAD_PATH=/var/lib/mycard/uploads
UPLOAD_MAX_SIZE=10485760

# --------------------- Logging ---------------------
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_COM_MYCARD=INFO
LOG_PATH=/var/log/mycard

# --------------------- Flyway ---------------------
SPRING_FLYWAY_ENABLED=true
SPRING_FLYWAY_BASELINE_ON_MIGRATE=true
